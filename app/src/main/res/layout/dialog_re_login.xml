<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_circular_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_dialog_title"
        style="#ff444444"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:textColor="#1F76F3"
        android:text="您的账号已在其它地方登录"
        android:paddingRight="15dp" />
    	<View
	        android:id="@+id/common_dialog_title_line"
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginTop="6dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:background="#ffdfdfdf"
	        android:visibility="gone"
        />
    
	
    <ImageView
        android:id="@+id/common_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/common_dialog_content"
        style="#ff444444"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:visibility="gone" />

    <View
        android:id="@+id/common_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="22dp"
        android:background="#ffdfdfdf" />

    <LinearLayout
        android:id="@+id/common_dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/common_dialog_btn_left"
            style="#ff444444"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_left_selector"
            android:gravity="center"
            android:text="退出" />

        <View
            android:id="@+id/common_dialog_line_vertical"
            android:layout_width="1px"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffdfdfdf" />

        <TextView
            android:id="@+id/common_dialog_btn_right"
            style="#ff444444"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_right_selector"
            android:gravity="center"
            android:text="重新登录" />
    </LinearLayout>

    <TextView
        android:id="@+id/common_dialog_btn_center"
        style="#ff444444"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="ssssss"
         />

</LinearLayout>