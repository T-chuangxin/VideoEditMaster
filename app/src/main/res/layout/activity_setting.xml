<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color"
    android:fitsSystemWindows="true"
    android:id="@+id/ll_setting_root_view"
    >
    <include layout="@layout/common_title_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/cardview_dark_background"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:id="@+id/ll_setting_container"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_dark_background"
        >
        <RelativeLayout
            android:id="@+id/rl_change_skin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="?android:attr/actionBarItemBackground"
            android:clickable="true"
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_change_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_personal_info"/>



            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_change_icon"
                android:text="个性换肤"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="30dp"
                android:textSize="14sp"

                />


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_chevron_right_white_24dp"

                />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>